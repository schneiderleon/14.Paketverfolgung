<Window x:Class="Paketverfolgung.BestellungBearbeitenFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bestellung bearbeiten" Height="450" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        >
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="37"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Bestellung bearbeiten"
                   FontSize="18" FontWeight="SemiBold"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Bestell ID:" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="2" Grid.Column="1" x:Name="TbOrderId" Height="26" IsReadOnly="True" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Kunde:" VerticalAlignment="Center"/>
        <ComboBox  Grid.Row="3" Grid.Column="1" x:Name="CbCustomer" Height="26" Margin="0,3,0,8" IsEnabled="False"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Produktname:" VerticalAlignment="Center"/>
        <TextBox   Grid.Row="4" Grid.Column="1" x:Name="TbProduct" Height="26" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Bestelldatum:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="5" Grid.Column="1" x:Name="DpOrderDate" Height="26" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Status:" VerticalAlignment="Center"/>
        <ComboBox  Grid.Row="6" Grid.Column="1" x:Name="CbStatus" Height="26" Margin="0,3,0,0">
            <ComboBoxItem Content="in Bearbeitung"/>
            <ComboBoxItem Content="versendet"/>
            <ComboBoxItem Content="zugestellt"/>
            <ComboBoxItem Content="Problem"/>
        </ComboBox>

        <StackPanel Grid.Row="7" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="30">
            <Button Content="Speichern" Width="140" Height="30" Click="BtnSave_Click"/>
            <Button Content="LÃ¶schen" Width="140" Height="30" Margin="12,0,0,0" Click="BtnDelete_Click"/>
            <Button Content="Abbrechen" Width="140" Height="30" Margin="12,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
