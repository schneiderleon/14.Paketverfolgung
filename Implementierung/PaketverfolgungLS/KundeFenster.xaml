<Window x:Class="Paketverfolgung.KundeFenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neuer Kunde" Height="360" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Neuer Kunde" FontSize="18" FontWeight="SemiBold"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="TbName" Height="26" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresse:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="TbAdresse" Height="26" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="E-Mail:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="TbEmail" Height="26" Margin="0,3,0,8"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Telefon:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="TbTelefon" Height="26" Margin="0,3,0,8"/>

        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Speichern" Width="140" Height="30" Click="BtnSave_Click"/>
            <Button Content="Abbrechen" Width="140" Height="30" Margin="12,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
